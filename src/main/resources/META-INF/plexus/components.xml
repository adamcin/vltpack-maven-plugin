<component-set>
    <components>
        <component>
            <role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
            <role-hint>vltpack</role-hint>
            <implementation>org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping</implementation>
            <configuration>
                <lifecycles>
                    <lifecycle>
                        <id>default</id>
                        <!-- START SNIPPET: vltpack-lifecycle -->
                        <phases>
                            <process-resources>
                                org.apache.maven.plugins:maven-resources-plugin:resources
                            </process-resources>
                            <prepare-package>
                                net.adamcin.maven:vltpack-maven-plugin:embed-bundles,
                                net.adamcin.maven:vltpack-maven-plugin:embed-packages,
                                net.adamcin.maven:vltpack-maven-plugin:vault-inf
                            </prepare-package>
                            <package>net.adamcin.maven:vltpack-maven-plugin:package</package>
                            <integration-test>
                                net.adamcin.maven:vltpack-maven-plugin:upload
                            </integration-test>
                            <install>
                                org.apache.maven.plugins:maven-install-plugin:install
                            </install>
                            <deploy>
                                org.apache.maven.plugins:maven-deploy-plugin:deploy
                            </deploy>
                        </phases>
                        <!-- END SNIPPET: vltpack-lifecycle -->
                    </lifecycle>
                </lifecycles>
            </configuration>
        </component>
        <component>
            <role>org.apache.maven.artifact.handler.ArtifactHandler</role>
            <role-hint>vltpack</role-hint>
            <implementation>org.apache.maven.artifact.handler.DefaultArtifactHandler</implementation>
            <configuration>
                <type>zip</type>
                <includesDependencies>false</includesDependencies>
                <extension>zip</extension>
                <addedToClasspath>false</addedToClasspath>
            </configuration>
        </component>
    </components>
</component-set>